<div class="message_window_header">
    {{#if chat_title}}
    <div id="add_delete_user"> 
    {{{ add_user }}}
    {{{ delete_user }}}
    </div>
        <div class="chat_window_header"> 
            {{{ chat_avatar }}}
            <h3 class="chat_title"> {{{chat_title}}} </h3>
        </div>
    {{else}} 
        <div class="choose_title"> Выберите чат</div> 
    {{/if}}
</div>
<div id="message_window">
    <div id="incoming_message">
        {{#if messages}}
        {{#each messages}}
        <p> {{this}}</p> 
        {{/each}}
        {{else}} 
        <div > </div> 
        {{/if}}
    </div>
    <div id="outgoing_message">
        {{#if outgoingMessages}}
        {{#each outgoingMessages}} 
        <p> {{this}}</p> 
        {{/each}}
       {{else}}  
         <div > </div> 
       {{/if}}
    </div>
</div>
{{{message_footer}}}
